		//- 	padding-top: 0px;
		//- 	//- z-index: 0;
		//- }

		button{
			z-index: 0;
		}

		#navigation{
			width: 100%;
		}
		
		#imageDiv{
			float: left;
			width: 400px;
		}

		#imageDiv2{
			width: 100%;
		}

