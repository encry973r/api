block content

	style.
		.box{
			background: rgba(34, 149, 203, 1);
			display: block;
			position: relative;
			top: 10px;
			padding-left: 60px;
			padding-right: 60px;
			padding-top: 50px;
			padding-bottom: 50px;
			width: 100%;
			color: #fff;
			}
		#pay{
			border-radius: 0px;

		}
		.alert{
			border-radius: 0px;

		}
		p, #amountInput{
			font-size: 12px;
			background: white;
			color: rgba(34, 149, 203, 0.9);
			color: #222;
			padding-top: 10px;
			padding-bottom: 10px;
